# Используйте официальный образ Node.js
FROM node:18

  # Установите рабочую директорию внутри контейнера
WORKDIR /usr/src/app

  # Копируйте зависимости для улучшения кэширования
COPY package*.json ./

  # Установите зависимости
RUN npm install

  # Копируйте остальные файлы приложения
COPY . .

  # Откройте порт 3000
EXPOSE 3000

  # Запустите приложение Vite в режиме разработки
CMD ["npm", "run", "dev"]
